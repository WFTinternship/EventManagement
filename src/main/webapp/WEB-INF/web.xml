<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--<error-page>-->
    <!--<location>/error.jsp</location>-->
    <!--</error-page>-->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.workfront.internship.event_management.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.workfront.internship.event_management.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.workfront.internship.event_management.servlet.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckEmailServlet</servlet-name>
        <servlet-class>com.workfront.internship.event_management.servlet.CheckEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckEmailServlet</servlet-name>
        <url-pattern>/checkEmail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.workfront.internship.event_management.servlet.EventController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/event-controller</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.workfront.internship.event_management.spring.SpringContextListener</listener-class>
    </listener>
</web-app>

